{
  "extends": "ts-conf-base/tsconfig.node.json",
  "compilerOptions": {
    "baseUrl": ".",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "incremental": true,
    "tsBuildInfoFile": "./.tsbuildinfo-node",
    "outDir": "./dist-node",
    "types": ["bun"],
    "assumeChangesOnlyAffectDirectDependencies": true,
    "skipDefaultLibCheck": true,
    "disableSourceOfProjectReferenceRedirect": true
  },
  "include": ["./sample/vite.config.ts", "update.ts"],
  "exclude": ["node_modules", "dist", "dist-node"]
}
