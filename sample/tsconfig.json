{
  "extends": "ts-conf-base/tsconfig.web.json",
  "compilerOptions": {
    "baseUrl": ".",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "types": [],
    "incremental": true,
    "tsBuildInfoFile": "./.tsbuildinfo",
    "outDir": "./dist",
    "assumeChangesOnlyAffectDirectDependencies": true,
    "skipDefaultLibCheck": true,
    "disableSourceOfProjectReferenceRedirect": true
  },
  "include": ["app.tsx", "**/*.ts", "**/*.tsx"],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}
